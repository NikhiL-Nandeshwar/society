generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  role        String
  mobile      String?  // New: mobile number (optional for now)
  wing        String?  // New: wing
  flatNumber  String?  // New: flat number
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

